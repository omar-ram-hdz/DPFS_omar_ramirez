---
interface Props {
  title:string,  
}
const {title="Amantoli"} = Astro.props;
import Colors from '@styles/Colors';
---
<!doctype html>
<html lang="es-MX">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kreon:wght@300..700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global define:vars={Colors}>
  *{
    margin:0;
    padding: 0;
    box-sizing: border-box;
    border: none;
    text-decoration: none;  
  }
	html,
	body {
		width: 100%;
		height: 100%;
    font-family: "Roboto", sans-serif;
    font-size: 18px;
    background-color: var(--black);
    color: var(--white);
	}
  h1,h2,h3,h4,h5,h6, a, button{
    font-family: "Kreon",serif;
  }
  a:visited{
    color:var(--white);
  }
  ul,ol{
    list-style: none;
    padding: none;
    margin: none;
    padding-inline: none;
    margin-inline: none;
  }
  button,a{
    cursor: pointer;
  }
</style>
